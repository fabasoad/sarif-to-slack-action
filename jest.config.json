{
  "clearMocks": true,
  "collectCoverageFrom": [
    "**/*.ts",
    "!**/*.d.ts",
    "!**/node_modules/**"
  ],
  "coverageReporters": [
    "lcov", "text", "text-summary"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 50,
      "functions": 50,
      "lines": 50,
      "statements": 50
    }
  },
  "moduleFileExtensions": [
    "js",
    "ts"
  ],
  "testEnvironment": "node",
  "testMatch": [
    "**/*.spec.ts"
  ],
  "testRunner": "jest-circus/runner",
  "testTimeout": 20000,
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "verbose": true
}
